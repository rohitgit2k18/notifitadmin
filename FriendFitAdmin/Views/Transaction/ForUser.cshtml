<div style="color: #367fa9;font-size: 22px;padding-left: 59px;
    padding-right: 40px; padding-top:20px">
    Transaction Details For User
</div>
<div style="padding-left: 59px;
    padding-right: 40px;">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Delivery Type</th>
                <th>Duration</th>
                <th>Purchase Date</th>
                <th>Expiry Date</th>
                <th>Subscription Type</th>
                <th>Cost</th>
                <th>User Name</th>
                <th>Mobile Number</th>
                <th>Email</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>@item.DeliveryType</td>
                <td>@item.Duration</td>
                <td>@item.PurchaseDate.Value.ToString("dd/MM/yyyy")</td>
                <td>@item.ExpiryDate.Value.ToString("dd/MM/yyyy")</td>
                <td>@item.SubscriptionType</td>           
                <td>@item.Cost</td>
                <td>@item.FirstName</td>
                <td>+@item.CountryId&nbsp;@item.MobileNumber</td>
                <td>@item.email</td>

            </tr>
            }
        </tbody>
    </table>
</div>

